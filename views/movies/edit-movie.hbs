<h2>Edit Movie</h2>

<form action="/movies/{{movie.id}}/edit" method="post">
 
    <input type="text" class="form-control" value="{{movie.title}}" name="title" placeholder="Title"><br>
    <input type="text" class="form-control" value="{{movie.genre}}" name="genre" placeholder="Genre"><br>
    <input type="text" class="form-control" value="{{movie.plot}}" name="plot" placeholder="Plot"><br>
    {{#each celebrities}}
  <div class="form-check">
    
  <input class="form-check-input" type="checkbox" value="{{this._id}}" name="cast" {{this.status}}>
  <label class="form-check-label" for="defaultCheck1">
    {{this.name}}
  </label>
</div>  {{/each}}
<br>  
  <button type="submit" value="Submit" class="btn btn-primary">Save</button>
</form>
<br>
<p style="color:red">{{error}}</p>